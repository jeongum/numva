<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.network.NetworkFailureActivity">

    <TextView
        android:id="@+id/network_failure_tv_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_failguide1"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"

        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/network_failure_tv_guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_failguide2"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:textColor="@color/colorGrayInactive"
        android:textSize="13dp"

        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_failure_tv_guide1"
        />

    <Button
        android:id="@+id/network_failure_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다시시도"
        android:fontFamily="@font/font_bold"
        android:includeFontPadding="false"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/roundrect_primary_background_23dp"
        android:elevation="5dp"

        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_failure_tv_guide2"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_network_error"
        app:layout_constraintTop_toBottomOf="@+id/network_failure_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>