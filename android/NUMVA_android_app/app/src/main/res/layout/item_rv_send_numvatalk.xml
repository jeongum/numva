<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/numvatalk_iv_item_isread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_primary_6dp"

        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/numvatalk_tv_item_send_context"
        app:layout_constraintTop_toTopOf="@id/numvatalk_tv_item_send_context"
        app:layout_constraintBottom_toBottomOf="@id/numvatalk_tv_item_send_context"
        />
    <TextView
        android:id="@+id/numvatalk_tv_item_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:04"

        android:fontFamily="@font/font_light"
        android:includeFontPadding="false"
        android:textSize="8dp"
        android:textColor="@color/colorLightBlack"
        app:layout_constraintRight_toLeftOf="@id/numvatalk_tv_item_send_context"
        app:layout_constraintBottom_toBottomOf="@id/numvatalk_tv_item_send_context"
        />

    <TextView
        android:id="@+id/numvatalk_tv_item_send_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect_message_send"
        android:text="안녕하세요."
        android:textSize="16dp"
        android:fontFamily="@font/font_demilight"
        android:includeFontPadding="false"

        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>