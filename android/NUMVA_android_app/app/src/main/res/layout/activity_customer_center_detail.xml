<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.customer_center.CustomerCenterDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customer_center_detail_cl_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/customer_center_detail_iv_backbtn"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_left_arrow_black"

            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/customer_center_detail_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객센터"
            android:textSize="20dp"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="17dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:id="@+id/customer_center_detail_iv_crossbtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="17dp"
            android:src="@drawable/ic_crossbtn"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/customer_center_detail_ll_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/customer_center_detail_cl_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/customer_center_detail_iv_bulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bulb_primary" />
        <TextView
            android:id="@+id/customer_center_detail_tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="스마트폰을 교체했는데 어떡하죠?"
            android:fontFamily="@font/font_demilight"
            android:includeFontPadding="false"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <TextView
        android:id="@+id/customer_center_detail_tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_demilight"
        android:includeFontPadding="false"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"

        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintTop_toBottomOf="@+id/customer_center_detail_ll_question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>