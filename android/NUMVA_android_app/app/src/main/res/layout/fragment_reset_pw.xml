<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".src.findLogin.PwResetFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textSize="13dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/colorBlack"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="36dp"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp">
        <EditText
            android:id="@+id/resetpw_et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="새 비밀번호"
            android:textSize="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:fontFamily="@font/font_regular"
            android:background="@drawable/roundrect_gray_border_background"
            android:textCursorDrawable="@drawable/theme_edittext_cursor"
            android:includeFontPadding="false"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:id="@+id/resetpw_Iv_pw_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_crossbutton_edittext"
            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/resetpw_et_pw"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="비밀번호 확인"
        android:textSize="13dp"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/colorBlack"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="36dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp">
        <EditText
            android:id="@+id/resetpw_et_pwc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인"
            android:textSize="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/roundrect_gray_border_background"
            android:textCursorDrawable="@drawable/theme_edittext_cursor"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:id="@+id/resetpw_Iv_cpw_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_crossbutton_edittext"
            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/resetpw_et_pwc"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/resetpw_tv_failure_cpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:textColor="@color/colorErrorRed"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:visibility="gone"/>

    <Button
        android:id="@+id/resetpw_btn_reset"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="58dp"
        android:background="@drawable/roundrect_primary_background_23dp"
        android:elevation="10dp"
        android:fontFamily="@font/font_bold"
        android:includeFontPadding="false"
        android:text="비밀번호 재설정"
        android:textColor="@color/colorWhite"
        android:textSize="19dp" />

</LinearLayout>