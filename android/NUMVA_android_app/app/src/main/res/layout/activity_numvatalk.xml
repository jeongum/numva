<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.numvatalk.NumvatalkActivity"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatroom_cl_userinfo_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/chatroom_iv_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_backbtn"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="23dp"
            />
        <ImageView
            android:id="@+id/chatroom_iv_icon"
            android:layout_marginLeft="16dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circle_70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/chatroom_iv_backbtn"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/chatroom_iv_icon">
            <TextView
                android:id="@+id/chatroom_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:fontFamily="@font/font_medium"
                android:includeFontPadding="false"
                android:textSize="17dp"
                android:textColor="@color/colorPrimary"/>

            <!--chatroom_tv_memo는 api또 만들어줘야하므로 걍 없애자-->
            <TextView
                android:id="@+id/chatroom_tv_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recent_message"
                android:fontFamily="@font/font_light"
                android:includeFontPadding="false"
                android:textSize="13dp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatroom_optionbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="23dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_actionbtn"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatroom_rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        />
    <LinearLayout
        android:id="@+id/chatroom_ll_quick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_gray_line_background"
        android:gravity="center">
        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:background="@color/colorGrayInactive"
            android:layout_marginVertical="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chatroom_ll_simplemessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatroom_rv_simplemessage"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="15dp"
            android:scrollbars="vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/chatroom_iv_quickbtn"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/ic_quickbtn"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/chatroom_et_message"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@drawable/roundrect_lightgray_background_30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginVertical="4dp"
            android:paddingHorizontal="15dp"
            android:textCursorDrawable="@drawable/theme_edittext_cursor"
            />
        <TextView
            android:id="@+id/chatroom_tv_sendbtn"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:background="@drawable/roundrect_primary_background_7dp"
            android:text="전송"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:layout_marginRight="7dp"/>
    </LinearLayout>
</LinearLayout>