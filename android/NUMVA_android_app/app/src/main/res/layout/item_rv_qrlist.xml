<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/qrlist_ll_BG"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingVertical="10dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/qrlist_rl_editbtn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_memo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/qrlist_rl_deletebtn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_memo"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qrlist_ll_FG"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundrect_gray_memobackground"
        android:gravity="center">
        <TextView
            android:id="@+id/qrlist_tv_qrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/font_demilight"
            android:includeFontPadding="false"
            android:text="111ê°€1111"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            />
    </LinearLayout>


</RelativeLayout>