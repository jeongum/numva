<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="match_parent"
    android:background="@drawable/roundrect_white_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dialog_twobtn_tv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_twobtn_ll_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:text="Context"/>

    <LinearLayout
        android:id="@+id/dialog_twobtn_ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_twobtn_btn_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundrect_bottom_left_gray_background"
            android:text="취소"
            android:textSize="16dp"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            />
        <Button
            android:id="@+id/dialog_twobtn_btn_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundrect_bottom_right_primary_background"
            android:text="확인"
            android:textSize="16dp"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>