<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="36dp"
    tools:context=".src.findLogin.PwResetDoneFragment">

    <ImageView
        android:id="@+id/resetpw_full_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_full_check"

        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/resetpw_tx_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 설정이 완료되었습니다!"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:textSize="20dp"

        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/resetpw_full_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/resetpw_btn_login"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/roundrect_primary_background_23dp"
        android:elevation="10dp"
        android:text="로그인"
        android:fontFamily="@font/font_bold"
        android:includeFontPadding="false"
        android:textSize="19dp"
        android:textColor="@color/colorWhite"

        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/resetpw_tx_done"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>