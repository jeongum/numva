<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numvatalk_bottomdialog_ll_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">
    <TextView
        android:id="@+id/numvatalk_bottomdialog_tv_numvacall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect_white_background"
        android:text="넘바콜 걸기"
        android:fontFamily="@font/font_demilight"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:paddingVertical="14dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/numvatalk_bottomdialog_tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect_white_background"
        android:text="채팅방 나가기"
        android:fontFamily="@font/font_demilight"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/numvatalk_bottomdialog_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect_white_background"
        android:text="취소"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        android:layout_marginVertical="8dp"/>
</LinearLayout>