<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.login.snslogin.view.ExistEmailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/snslogin_exist_iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_alert_exclamation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/snslogin_exist_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/sns_exist_title"
            android:textSize="30dp"
            android:fontFamily="@font/font_bold"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/snslogin_exist_iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/snslogin_exist_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:paddingHorizontal="55dp"

            android:text="@string/sns_exist_description"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:textColor="@color/colorSemiBlack"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/snslogin_exist_tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/snslogin_exist_tv_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/sns_login_exist_btn_back"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:background="@drawable/roundrect_white_background"
                android:elevation="20dp"

                android:text="안 할래요"
                android:textSize="17dp"
                android:fontFamily="@font/font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack"
                />

            <Button
                android:id="@+id/sns_login_exist_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:background="@drawable/roundrect_primary_background_15dp"
                android:elevation="20dp"

                android:text="연동할게요!"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/font_bold"
                android:includeFontPadding="false"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>