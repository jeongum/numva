<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.custom_dialogs.SelectTwoButtonDialog"
    android:background="@drawable/roundrect_white_background">
    <LinearLayout
        android:id="@+id/dialog_select_twobtn_ll_crossbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_crossbtn"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dialog_select_twobtn_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="타이틀"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/dialog_select_twobtn_v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/dialog_select_twobtn_tv_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dialog_select_twobtn_v_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/dialog_select_twobtn_tv_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="45dp"
            android:paddingVertical="10dp"

            android:text="option1"
            android:background="@drawable/roundrect_white_background"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:textSize="18dp"
            android:textAlignment="center"
            android:elevation="5dp"
            />

        <TextView
            android:id="@+id/dialog_select_twobtn_tv_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="45dp"
            android:paddingVertical="10dp"

            android:text="option2"
            android:background="@drawable/roundrect_white_background"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:textSize="18dp"
            android:textAlignment="center"
            android:elevation="5dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>