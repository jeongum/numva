<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BottomNavigationView Font theme-->
    <style name="Widget.BottomNavigationView"
        parent="">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActivate</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInActivate</item>
    </style>

    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/font_thin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomNavigationTextInActivate" parent="BottomNavigationTextActivate"/>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TransparentBottomSheetDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialogFragmentChild</item>
    </style>

    <style name="TransparentBottomSheetDialogFragmentChild" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#00000000</item>
    </style>
</resources>